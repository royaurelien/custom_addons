    <record id="custom_addon_view_kanban" model="ir.ui.view">
        <field name="name">Custom Addons Kanban</field>
        <field name="model">custom.addon</field>
        <field name="arch" type="xml">

        <kanban class="oe_background_grey o_kanban_dashboard">
            <field name="icon"/>
            <field name="name"/>
            <field name="author"/>
            <field name="color"/>
            <field name="is_many_used"/>
            <field name="branch_ids"/>
            <field name="branch_count"/>
            <field name="repository_count"/>
            <field name="tag_ids"/>
            <field name="category_id"/>
            <field name="summary"/>
            <field name="message_needaction_counter"/>
                <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_color_#{kanban_getcolor(record.color.raw_value)} oe_kanban_global_click">
                                <!-- Kanban header -->
                                <div class="o_kanban_card_header">
                                    <div class="o_kanban_manage_button_section float-right">
                                        <span class="badge">
                                            <i class="fa fa-fw fa-folder-o" />
                                            <t t-esc="record.repository_count.value" />
                                        </span>
                                        <span class="badge">
                                            <i class="fa fa-fw fa-code-fork" />
                                            <t t-esc="record.branch_count.value" />
                                        </span>
                                        <!-- <t t-if="record.is_many_used.raw_value">
                                            <span class="badge">
                                                <i class="fa fa-fw fa-copy" />
                                            </span>
                                        </t> -->
                                            <!-- <a class="m-1" states="active" type="object" name="action_open_admin_url">
                                            <i class="fa fa-md fa-link" role="img" aria-label="Manage" title="Manage"/>
                                        </a>
                                        <a class="m-1" states="active" type="object" name="action_choose_user_login">
                                            <i class="fa fa-md fa-users" role="img" aria-label="Log in as.." title="Log in as.."/>
                                        </a>
                                        <a class="m-1" states="active,inactive" type="object" name="action_login_with_user">
                                            <i class="fa fa-lg fa-sign-in" role="img" aria-label="Log in" title="Log in"/>
                                        </a> -->
                                    </div>
                                    <div class="o_kanban_card_header_title">
                                        <div class="o_primary">
                                            <field name="name"/>
                                        </div>
                                        <div class="o_secondary">
                                            <field name="author"/>
                                            -
                                            <field name="category_id"/>
                                        </div>
                                    </div>
                                    <div class="o_kanban_record_subtitle">
                                        <div>
                                            <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                                            <field name="branch_ids" widget="many2many_tags"/>
                                        </div>
                                        <!-- <div><a t-att-href="record.main_hostname.value" target="_blank"><field name="main_hostname"/></a></div> -->
                                    </div>
                                </div>
                                <!-- Kanban content -->
                                <div class="mb8 mt8 o_kanban_content">
                                    <!-- <div class="text-muted"><field name="summary"/></div> -->
                                </div>
                                <!-- Bottom -->
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <!-- <t t-if="record.overall_state.raw_value == 'error'">
                                            <i class="fa fa-exclamation-triangle text-danger"
                                               role="img"
                                               title="Healthcheck errors. Check the chatter for details."
                                               aria-label="Healthcheck errors. Check the chatter for details."
                                            />
                                        </t> -->
                                        <t t-if="record.message_needaction_counter.raw_value">
                                            <span role="alert" class="oe_kanban_mail_new" title="Unread Messages">
                                                <i class="fa fa-comments" aria-label="Messages" role="img"/>
                                                <t t-raw="record.message_needaction_counter.raw_value"/>
                                            </span>
                                        </t>
                                        <div class="o_kanban_inline_block">
                                            <field name="activity_ids" widget="kanban_activity"/>
                                        </div>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <!-- <img t-att-src="kanban_image('res.partner', 'image_128', record.partner_id.raw_value)" -->
                                        <!-- <img t-att-src="kanban_image('res.partner', 'image_medium', record.id.value)"
                                        t-att-title="record.partner_id.value"
                                        t-att-alt="record.partner_id.value"
                                        class="oe_kanban_avatar float-right"/> -->
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>

        </field>
    </record>


